/*welcome*/
.container {
    height: 100%;
    display: flex;
    justify-content: center;
}

.background-image {
    width: 100%;
    height: 100%;
}

.text-user {
    position: absolute;
    bottom: 50rpx;
    color: white;
    font-size: 20rpx;
}

/*index*/
.scroll-view {
    height: 100%;
}

.swiper {
    height: 420rpx;
}

.swiper-item-image {
    width: 100%;
}

.swiper-item-mask {
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
    bottom: 0;
    display: flex;
}

.swiper-item-text {
    position: absolute;
    bottom: 55rpx;
    padding: 0 25rpx;
    color: white;
    font-size: 35rpx;
    text-shadow: black 0 1px 0;
}

.article-list {
    padding: 0 30rpx;
}

.article-item {
    display: flex;
    justify-content: space-between;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.article-item-title {
    padding-right: 20rpx;
    font-size: 30rpx;
}


.article-item-image {
    width: 150rpx;
    height: 120rpx;
}

.section-title {
    background-color: #00a2ea;
    display: flex;
    justify-content: center;
    color: white;
    padding: 15rpx 0;
    margin: 0 -30rpx;
    font-size: 25rpx;
}